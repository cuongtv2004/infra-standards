# Ubuntu 14.04
# PHP 5.5
sudo apt-get install python-software-properties
sudo add-apt-repository ppa:ondrej/php5
sudo apt-get update
sudo apt-get install php5 php5-cgi php5-cli php5-common php5-fpm php5-gd php5-imagick php5-mcrypt php5-mysql

# PHP 5.6
sudo apt-get install python-software-properties
sudo add-apt-repository ppa:ondrej/php
sudo apt-get update
sudo apt-get install -y php5.6 php5.6-cgi php5.6-cli php5.6-common php5.6-fpm php5.6-gd php5.6-imagick php5.6-mcrypt php5.6-mysql

# PHP 7.0
sudo apt-get install python-software-properties
sudo add-apt-repository ppa:ondrej/php
sudo apt-get update
sudo apt-get install -y php7.0 php7.0-cgi php7.0-cli php7.0-common php7.0-curl php7.0-fpm php7.0-gd php7.0-mbstring php7.0-mcrypt php7.0-mysql
